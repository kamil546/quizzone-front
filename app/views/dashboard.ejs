<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/main.css"/>
    <title>Quizzone - Dashboard</title>
</head>
<body>
    <div id="gc1"><h1>Witaj ponownie,</h1></div><hr>
    <h2>Dostepne Quizy</h2>
    <div id="quizList"></div>


    <script>
        document.addEventListener('DOMContentLoaded', async function() {
            if(localStorage.getItem('status')!==""||localStorage.getItem('status')!==null){
                document.querySelector('#gc1').innerHTML+=localStorage.getItem('status');
                localStorage.setItem('status','');
            }
            const token = localStorage.getItem('jwt-token');
            try {
                const response = await fetch('http://quizzone.zapto.org:8000/api/quizes', {
                    method: 'GET',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${token}`
                    }
                });
    
                if (!response.ok) {
                    throw new Error('Failed to fetch quizzes');
                }
                
                const data = await response.json();
                const quizList = document.getElementById('quizList');
    
                data.quizes.forEach(quiz => {
                    const li = document.createElement('li');
                    li.textContent = quiz.name;
                    quizList.appendChild(li);
                });
            } catch (error) {
                console.error('Error fetching quizzes:', error);
                const quizList = document.getElementById('quizList');
                quizList.innerHTML = '<li class="text-danger">Wystąpił błąd podczas pobierania quizów.</li>'; 
            }
        });
    </script>
    
</body>
</html>