<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quizzone - Rejestracja</title>
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'/>
    <link rel="stylesheet" href="/css/main.css"/>
</head>
<body style="zoom:0.95;">
<div id="ovl">
    <div id="tile-bg">

        <div class="tile-center">
            <div id="logo"><div id="logo-sygnet"><img src="/img/logo2.png" alt="logo"/></div></div>
            <div id="bg-header">
                <div id="bg-header-main">QUIZZONE - Łam zagadki, zdobywaj szczyty!!</div>
                <div id="bg-header-sub">
                    <div id="bg-header-sub-ico">
                        <img src="/img/grafika1.png" alt="grafika1"/>
                    </div>
                    <div id="bg-header-sub-text">
                        Zanurz się w świecie quizów, testuj swoje umiejętności, zdobywaj punkty i baw się!
                    </div>
                </div>
            </div>
            <div id="tile-widget">
                <div class="widget-item" style="border-right: 3px dotted #f9f6f3;">
                    <div class="widget-ico"><div><i class='bx bx-basketball' ></i></div></div>
                    <div class="widget-item-text">
                        <div class="widget-item-head">Rywalizacja</div>
                        <div class="widget-item-desc">Tryby gry 1v1</div>
                    </div>
                </div>
                <div class="widget-item">
                    <div class="widget-ico"><div><i class='bx bx-diamond'></i></div></div>
                    <div class="widget-item-text">
                        <div class="widget-item-head">Personalizacja</div>
                        <div class="widget-item-desc">do wygody</div>
                    </div>
                </div>
            </div>
        </div>
        <img id="bgt" src="/img/tlo6.png" alt="tlo"/>
    </div>
    <div id="content-tile">
        <div class="tile-center-1">
            <div class="header-text"><img alt='obrazek' src="/img/grafika3.png"/>Zarejestruj</div>
            <div id="form">
                <form method="post" id="loginForm">
                    <label><div class="text-input">Login</div><input type="text" name="login" id="login"/></label>
                    <label><div class="text-input">Haslo</div><input type="password" name="login" id="password"/></label>

                   <input type="submit" value="Zarejestruj się"/>
                   <div style='font-size:1.1em;font-style: italic;color: #555;' class="form-info">
                    Masz konto? <a href="/login">zaloguj się</a>
                </div>
                   <div class="form-info">
                    <div style=" display: flex; padding: 6px; background-color: #fbf5ee; border-radius: 50%; "><i class="bx bx-check" style=" font-weight: bold; color: #ef846a; "></i></div><div style=" color: #222222; "> aktualna wersja aplikacji 1.0</div>
                </div>
                <div class="form-info">
                    <div style=" display: flex; padding: 6px; background-color: #fbf5ee; border-radius: 50%; "><i class="bx bx-check" style=" font-weight: bold; color: #ef846a; "></i></div><div style=" color: #222222; ">nowy wyglad</div>
                </div>
                </form>
            </div>
        </div>
    </div>
</div>

















<script>
document.querySelector('#loginForm').addEventListener('submit',async (event)=>{
event.preventDefault();


const login = document.querySelector('#login').value;
const password = document.querySelector('#password').value;

try{
    const response = await fetch('http://quizzone.zapto.org:8000/api/register', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({
                    username: login,
                    password: password
                })
        });

        const data = await response.json();
        if (response.ok) {
            localStorage.setItem('jwt-token', data.token);
            localStorage.setItem('status', 'zarejestrowano pomyslnie');
            window.location.href='/dashboard';
        } else {
            console.log(data.message); // Informacja o błędzie
        }

}
catch(err){
    console.error('Error:', error);
}
});

</script> 
</body>
</html>