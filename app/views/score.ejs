<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'/>
    <link rel="stylesheet" href="/css/main.css"/>
    <title>Quizzone - Quiz</title>
</head>
<body>
    <div class="ovl-app">
        <div id="score"></div>
    </div>
    
    <script>
        const id = "<%= id %>";
        const token = localStorage.getItem('jwt-token');
        const showscore = async () => {
            try {
                const response = await fetch(`http://quizzone.zapto.org:8000/api/score/${id}`, {
                    method: 'GET',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${token}`
                    }
                });
                if (!response.ok) {
                    throw new Error('Błąd pobrania pytania');
                }
                const data = await response.json();
                const score=data['score'];
                const wynik=score['correct'];
                const wszystkie=score['all'];
                document.getElementById("score").innerHTML=wynik+'/'+wszystkie;
            } catch (error) {
                console.error('Error', error);
            }
        };
        showscore();
    </script>

</body>
</html>
